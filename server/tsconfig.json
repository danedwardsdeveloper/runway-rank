{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true,
		"moduleResolution": "NodeNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "../types.d.ts"],
	"exclude": ["node_modules", "__tests__", "dist"]
}
